<%- include('includes/header') %>

    <div class="flex-container">
        <section class="container">
            <header>
                <h2>Nova Meta</h2>
            </header>
            <main>
                <%- include('includes/messages') %>
                <form action="/registrarMeta" method="post">
                    <input type="hidden" name="LoginId" value="<%= user %>">
                    <div class="inputs">
                        <label for="usuario">Nome da meta:</label>
                        <input type="text" id="nome" name="nome" class="validar">
                    </div>
                    <div class="inputs">
                        <label for="senha">Digite o valor da Meta</label>
                        <input type="number" id="valorMeta" name="valorMeta" class="validar senha">
                    </div>
                    <div class="inputs">
                        <label for="senha">Digite o prazo da Meta</label>
                        <input type="date" id="prazoMeta" name="prazoMeta" class="validar senha">
                    </div>
                    <button id="registrar">Adicionar</button>
                </form>
            </main>
            <footer>
                <p id=""><a href="/dashboard">Voltar</a></p>
            </footer>
        </section>
    </div>

<%- include('includes/footer') %>