<% if(metaAtual && userMetas){ %>
<main class="grid-container">
    <div class="cards">   
            <div class="card-item">
                <div class="card-title">
                    <h2>Nome</h2>
                </div>
                <h2><%- metaAtual.nome %></h2>
            </div>

            <div class="card-item">
                <div class="card-title">
                    <h2>Valor</h2>
                </div>
                <h2><%- metaAtual.valorMeta %></h2>
            </div>

            <div class="card-item">
                <div class="card-title">
                    <h2>Prazo</h2>
                </div>
                <h2><%- metaAtual.prazoMeta %></h2>
            </div>

            <div class="card-item">
                <div class="card-title">
                    <h2>Progresso</h2>
                </div>
            </div>
        </div>
        <div class="charts">
            <div class="chart-item info"><a href="/registrarMeta">Adicionar Meta</a></div>
            <div class="chart-item more">
                <form action="/dashboard" method="post">
                    <input type="hidden" name="<%= user %>">
                    <input type="text" name="valorMeta">
                    <button>Atualizar</button>
                </form>
            </div>
        </div>
</main>
<% } %>

<%- include('includes/footer') %>